# Environment Variables for Nexus Revoluter Project

# General Configuration
NODE_ENV=development  # Use 'production' for Mainnet deployment

# Blockchain Configuration
PRIVATE_KEY=your_wallet_private_key  # Pi Network wallet private key (KYC-verified for Mainnet)
PI_TESTNET_RPC_URL=https://api.testnet.minepi.com  # Pi Network Testnet RPC URL
PI_MAINNET_RPC_URL=https://api.mainnet.minepi.com  # Pi Network Mainnet RPC URL
PI_TESTNET_CHAIN_ID=314159  # Pi Network Testnet chain ID (placeholder)
PI_MAINNET_CHAIN_ID=314159  # Pi Network Mainnet chain ID (placeholder)
PI_EXPLORER_API_KEY=your_pi_explorer_api_key  # Pi Network block explorer API key (if available)
MNEMONIC=test test test test test test test test test test test junk  # Test mnemonic for local Hardhat network

# Hardhat Configuration
REPORT_GAS=true  # Enable gas reporting (true/false)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key  # For gas reporting in USD (optional)

# Security Configuration
SECURITY_ENCRYPTION_KEY=your_encryption_key_here  # Key for encrypting sensitive data
SECURITY_MFA_ENABLED=true  # Enable multi-factor authentication for admin actions

# API Configuration
API_KEY=your_api_key_here  # API key for external integrations (e.g., Pi Browser)
SECRET_KEY=your_secret_key_here  # Secret key for signing requests

# Pi Network Integration
PI_KYC_API_URL=https://api.minepi.com/kyc  # Placeholder for Pi Network KYC API
PI_KYC_API_KEY=your_pi_kyc_api_key  # Placeholder for KYC API key

# Notification Configuration
DISCORD_WEBHOOK=your_discord_webhook_url  # For CI/CD notifications (optional)

# Logging Configuration
LOG_LEVEL=INFO  # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
