# Environment Variables for Nexus Revoluter Project

# General Configuration
NODE_ENV=production

# Database Configuration
DATABASE_URL=mysql://user:password@db:3306/nexus_db
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=nexus_db
MYSQL_USER=user
MYSQL_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://cache:6379

# API Configuration
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# Consensus Configuration
CONSENSUS_INTERVAL=5  # Time in seconds between consensus runs

# Security Configuration
SECURITY_ENCRYPTION_KEY=your_encryption_key_here
SECURITY_MFA_ENABLED=true  # Enable or disable multi-factor authentication

# Notification Configuration
NOTIFICATION_SERVICE_URL=http://notification_service:port  # URL for the notification service

# Monitoring Configuration
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# Other Configuration
LOG_LEVEL=INFO  # Set the logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
